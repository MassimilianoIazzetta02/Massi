<% libri.forEach(libri => { %>
    <ul>
        <li>Titolo: <%= libri.titolo %> </li>
        <li>Autore: <%= libri.fk_autore %> </li>
        <li>Modifica sotto</li>
        <form method="POST" action="/modificalibri">
            <input type="hidden" name="id" value="<%= libri.id %> ">
            <li> <input type="text" name="titolo"> </li>
            <li><input type="text" name="fk_autore"> </li>
            <input type="submit" value="Modifica">
        </form>
        <form action="/dellibro" method="post">
            <input type="hidden" name="id" value="<%= libri.id %>">
            <input type="submit" value="Elimina">
        </form>
    </ul>
<% }) %>
<p>Aggiunta libro</p>
<form action="/addlibro" method="post">
    <input type="text" name="id" value="ID">
    <input type="text" name="titolo" value="titolo">
    <input type="text" name="fk_autore" value="ID autore">
    <input type="submit" value="Aggiungi">
</form>
